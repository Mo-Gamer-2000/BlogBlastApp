<div class="overlay fullscreen-fixed"></div>
<div class="loader-wrapper fullscreen-fixed d-flex justify-content-center align-items-center">
    <div class="bg-white p-3 rounded shadow-lg">
        <!-- Display the loading text -->
        <label class="mb-0">@LoadingText...</label>
    </div>
</div>

<style type="text/css">
    .fullscreen-fixed {
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
    }

    .overlay {
        background: black;
        opacity: 0.5;
        z-index: 1050;
    }

    .loader-wrapper {
        z-index: 1051;
    }
</style>

@code {
    // Define a parameter to receive the loading text
    [Parameter]
    public string LoadingText { get; set; } = "Loading...";
}