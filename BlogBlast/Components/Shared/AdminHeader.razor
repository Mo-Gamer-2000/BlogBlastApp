<div class="bg-gray p-3 d-flex justify-content-between">
    <!-- Display the title -->
    <h5>@Title</h5>
    <div class="actions-btns d-flex align-items-center">
        <!-- Display the action buttons -->
        @ActionButtons
    </div>
</div>

@code {
    // Define a parameter to receive the title
    [Parameter, EditorRequired]
    public string Title { get; set; }

    // Define a parameter to receive the action buttons
    [Parameter]
    public RenderFragment? ActionButtons { get; set; }
}